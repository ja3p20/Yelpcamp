<% include partials/header %>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to yelpcamp</h1>
      <p>View our hand picked campground from all over the world</p>
      <p>
        <a class="btn btn-primary btn-large" href="campgrounds/new">Add new campground</a>
      </p>
    </div>

  </header>

  <!-- <%= campgrounds %>  // we can see 'object object object' that means we fetched the campgrounds-->

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-4 col-sm-6">

          <img src="<%= campground.image %>" class="img-thumbnail img-fluid" alt="noi">
          <div class="caption">
            <h4><%= campground.name %></h4>
          </div>

      </div>

    <% }); %>
  </div>


</div>
<% include partials/footer %>
